Host *
  TCPKeepAlive yes
  ServerAliveInterval 120
  ControlMaster auto
  ControlPath /tmp/ssh_mux_%h_%p_%r
# ControlPath ~/.ssh/connections/ssh-%r@%h:%p
  SetEnv LC_ALL=C

Host github.com
  User git
  Hostname github.com
  ServerAliveInterval 60
  ControlPersist 1h

Host local
  Hostname 127.0.0.1
  User kenorb
  IdentityFile ~/.ssh/id_rsa
