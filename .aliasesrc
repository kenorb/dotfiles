alias for-each-file="find . -mindepth 1 -maxdepth 1 -type f -print0 | xargs -0 -L1"

### Sed

alias conv-rm-trail-spaces="sed -e 's/^[ \t]*//g' | sed -e 's/[ \t]*$//g'"
